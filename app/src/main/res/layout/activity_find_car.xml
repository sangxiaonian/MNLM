<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_of_ffffff"
    android:orientation="vertical"
    tools:context=".ui.FindCarActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_marginTop="36dp"
        android:text="填写发布找车信息"
        android:textColor="@color/color_of_040000"
        android:textSize="24dp" />

    <com.fy.companylibrary.widget.ItemTextView
        android:id="@+id/item_car_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/gap_app"
        android:minHeight="55dp"
        app:colorCenterHide="@color/color_of_cccccc"
        app:colorLeft="@color/color_of_666666"
        app:editable="false"
        app:srcshow="true"

        app:showline="true"
        app:sizecenter="15dp"
        app:sizeleft="15dp"
        app:srcRight="@drawable/icon_go_999999"
        app:textcenterhide="请选择车辆类型"
        app:textleft="车辆类型" />

    <com.fy.companylibrary.widget.ItemTextView
        android:id="@+id/item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_marginRight="@dimen/gap_app"
        android:minHeight="55dp"
        app:centerType="number"
        app:colorCenterHide="@color/color_of_cccccc"
        app:colorLeft="@color/color_of_666666"
        app:editable="true"
        app:showline="true"
        app:sizecenter="15dp"
        app:sizeleft="15dp"
        app:textcenterhide="请输入支付承运人的实际运费"
        app:textleft="实际运费(元）" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/bt_sum"
        style="@style/bt_red"
        android:text="确定发布找车" />
</LinearLayout>
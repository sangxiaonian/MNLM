<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_of_ffffff">


    <FrameLayout
        android:id="@+id/content"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:id="@+id/ll_tool"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/ovl_5_ffffff"
        android:gravity="center_vertical"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/toolbar_src_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/color_of_tran"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_back_3d3d3d" />
        </FrameLayout>

        <View
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_of_tran"
            android:hint="从哪发货"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/color_of_040000"
            android:textColorHint="@color/color_of_cccccc"
            android:textSize="15sp" />


        <FrameLayout
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/color_of_tran"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search_clear_999999" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_of_ffffff"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_app"
            android:text="填写发货信息"
            android:layout_marginTop="@dimen/gap_app"
            android:textColor="@color/color_of_040000"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/gap_app"
            android:background="@color/line_color" />

        <com.fy.companylibrary.widget.ItemTextView
            android:id="@+id/item_address"
            style="@style/item_edit"
            app:isSingleLine="true"
            app:textcenterhide="例：2号楼5楼501室"
            app:textleft="门牌号" />

        <com.fy.companylibrary.widget.ItemTextView
            android:id="@+id/item_name"
            style="@style/item_edit"
            app:isSingleLine="true"

            app:textcenterhide="发货人姓名"
            app:textleft="发货人" />

        <com.fy.companylibrary.widget.ItemTextView
            android:id="@+id/item_phone"
            style="@style/item_edit"
            app:centerType="phone"
            app:isSingleLine="true"
            app:textcenterhide="发货人电话"
            app:textleft="电话" />

        <TextView
            android:id="@+id/bt_sum"
            style="@style/bt_red"
            android:text="确定" />
    </LinearLayout>


    <include layout="@layout/layout_refresh"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_tool"
        android:layout_margin="7dp"

        />

</RelativeLayout>
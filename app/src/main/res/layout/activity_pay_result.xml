<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_of_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.PayResultActivity">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_xz_36_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="订单已支付"
        android:textColor="@color/color_of_040000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:text="平台员工"
        android:textColor="@color/color_of_999999"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/bt1"
        style="@style/bt_red"
        android:text="立即派车" />

    <TextView
        android:id="@+id/bt2"
        style="@style/bt_white"
        android:text="发布找车" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_of_ffffff"
    android:orientation="vertical"
    tools:context=".ui.BillMonthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_marginTop="30dp"
        android:text="共支出 10 笔，合计"
        android:id="@+id/tv_expend_number"
        android:textColor="@color/color_of_040000"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textColor="@color/color_of_040000"
        android:textSize="34dp"
        android:textStyle="bold" />
 <FrameLayout
     android:layout_width="match_parent"
     android:id="@+id/content"
     android:layout_height="match_parent"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/gap_app"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:id="@+id/tv_title"
        android:textSize="13dp"
        android:textColor="@color/color_of_999999"
        tools:text="快件已经发车"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_point"
        android:layout_marginLeft="@dimen/gap_app"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        android:gravity="end"
        android:layout_width="0dp"
        android:id="@+id/tv_time"
        android:textSize="11dp"
        android:width="65dp"
        android:textColor="@color/color_of_999999"
        tools:text="03:56\n2020-05-06"
        android:layout_height="wrap_content"/>

    <com.fy.androidlibrary.widget.CircularImageView
        android:id="@+id/img_point"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        android:src="@color/color_of_666666"
        app:viewradius="3dp"
        android:layout_marginLeft="@dimen/gap_app"
        android:layout_width="6dp"
        android:layout_height="6dp"/>

    <View
        android:id="@+id/line_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_point"
        app:layout_constraintEnd_toEndOf="@id/img_point"
        android:layout_width="@dimen/line_height"
        android:background="@color/line_color"
        app:layout_constraintBottom_toTopOf="@id/img_point"
        android:layout_height="0dp"/>
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_point"
        app:layout_constraintEnd_toEndOf="@id/img_point"
        android:layout_width="@dimen/line_height"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/img_point"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="person_center_parent">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="person_center_img_left">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="person_center_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color_of_040000</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>


    <style name="person_center_img_right">
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">13dp</item>


    </style>

    <style name="bt_red">
        <item name="android:textColor">@color/color_of_ffffff</item>
        <item name="android:background">@drawable/ovl_5_e50000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="bt_white" parent="bt_red">
        <item name="android:textColor">@color/color_of_040000</item>
        <item name="android:background">@drawable/ovl_5_eeeeee</item>
    </style>


    <style name="item_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_of_ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/gap_app</item>
        <item name="android:paddingRight">@dimen/gap_app</item>
        <item name="android:minHeight">55dp</item>
        <item name="centerType">normal</item>
        <item name="colorCenterHide">@color/color_of_cccccc</item>
        <item name="colorCenter">@color/color_of_040000</item>
        <item name="colorLeft">@color/color_of_666666</item>
        <item name="showline">true</item>
        <item name="sizecenter">15dp</item>
        <item name="sizeleft">15dp</item>
        <item name="editable">true</item>
        <item name="isSingleLine">false</item>
    </style>
    <style name="item_text" parent="item_edit">
        <item name="editable">false</item>
        <item name="srcRight">@drawable/icon_go_999999</item>
        <item name="srcshow">true</item>
    </style>

</resources>